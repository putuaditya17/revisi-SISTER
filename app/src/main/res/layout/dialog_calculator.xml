<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATA PEMBAYARAN"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Belanja : "
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_bayar_tv"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:hint="25000" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bayarEt"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:drawableStart="@drawable/ic_money"
        android:drawablePadding="10dp"
        android:hint="Masukan Uang yang Di Bayar Disini"
        android:minHeight="48dp"
        android:textSize="15sp"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:weightSum="3" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitungBtn"
            android:text="Bayar"
            android:backgroundTint="@color/teal_700"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/printBtn"
            android:text="print"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connectBtn"
            android:text="connect printer"
            android:backgroundTint="@color/teal_700"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disconnectBtn"
            android:text="disconnect printer"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembalian :"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:textSize="26sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kembalianTV"
            android:layout_marginBottom="16dp"
            android:textSize="26sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            tools:hint="0" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblPrinterName"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Printer Name"
        android:visibility="gone" />

</LinearLayout>